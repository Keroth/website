{# Adds in the topbar #}

{% extends "base.j2" %}



{% block body %}
<div class="container">
	<div class="navbar navbar-default navbar-default" role="navigation">
	  {% block topbar %}
	  <div class="container">
		<div class="navbar-header" style="vertical-align: middle;">
		  <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".navbar-collapse">
			<span class="sr-only">Toggle navigation</span>
			<span class="icon-bar"></span>
			<span class="icon-bar"></span>
			<span class="icon-bar"></span>
		  </button>
		  <a class="navbar-brand" href="{{ home_url }}" style="padding-top: 10px; padding-bottom: 10px;">
			<img src="{{ media_url('img/mainframe-long.svg') }}" alt="Mainframe" style="height: 28px;" />
		  </a>
		</div><!-- /.navbar-header -->
		<div class="collapse navbar-collapse">
		  <ul class="nav navbar-nav">
			{% from "macros.j2" import render_main_menu with context %}
			{{ render_main_menu() }}
		  </ul>
		</div><!-- /.nav-collapse -->
	  </div><!-- /.container -->
	  {% endblock topbar %}
	</div><!-- /.navbar -->

	{{ super() }} {# Use this to include the rest of the body block as it was originally defined #}
</div>
{% endblock body %}
