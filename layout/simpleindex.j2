{# layout for group index #}

{% extends "default.j2" %}

{% block mainbox %}
<div class="panel panel-default">
	<div class="panel-heading">
		<h3 class="panel-title">{{ resource.meta.title }}</h3>
	</div>
	<div class="panel-body">
		<div class="row">
			{% for res in site.content.node_from_relative_path(resource.meta.type).walk_resources_sorted_by_time() if resource.meta.title is not defined or resource.meta.subtype == res.meta.type %}
			<div class="col-xs-6 col-md-3 vbottom">
				<div class="caption"><h4>{{ res.meta.title }}</h4></div>
				<a href="{{ content_url(res.url) }}" class="thumbnail">
					{% if res.meta.thumbnail is defined %}
					<img src="{{ content_url(res.meta.thumbnail) }}" alt="{{ res.meta.title }}">
					{% else %}
						{% if resource.meta.type == "group" %}
						<img src="{{ media_url("img/group.svg") }}" alt="{{ res.meta.title }}">
						{% elif resource.meta.type == "project" %}
						<img src="{{ media_url("img/project.svg") }}" alt="{{ res.meta.title }}">
						{% endif %}
					{% endif %}
				</a>
			</div>
			{% else %}
			<div class="col-xs-12 col-md-12">
				<div class="alert alert-info">
					{% if resource.meta.type == "group" %}
					Hier sind bisher keine Gruppen einsortiert.
					{% elif resource.meta.type == "project" %}
					Hier sind bisher keine Projekte einsortiert.
					{% endif %}
				</div>
			</div>
			{% endfor %}
		</div>
	</div>
</div>
{% endblock mainbox %}
